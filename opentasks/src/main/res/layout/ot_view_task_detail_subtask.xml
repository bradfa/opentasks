<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
            style="@style/task_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/ot_percentage_background"
                style="@style/task_list_progress_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <RelativeLayout
                style="@style/tasks_expandable_list_item"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

            <TextView
                    android:id="@+id/ot_task_title"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/task_list_title_text"
                    android:textIsSelectable="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>


            <TextView
                    android:id="@+id/ot_task_due_date"
                    style="@style/task_list_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:gravity="end"
                    android:paddingLeft="0dip"
                    android:paddingRight="2dip"
                    android:textIsSelectable="false"
                    android:textSize="12sp"/>

        </RelativeLayout>

    </FrameLayout>
</layout>